# Konfiguracja bazy danych PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sales_copilot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=sales_copilot

# Konfiguracja Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=sales_knowledge

# Konfiguracja API Ollama
OLLAMA_API_URL=https://ollama.com/api
OLLAMA_MODEL=gpt-oss-120b
OLLAMA_FALLBACK_MODEL=gpt-oss-20b

# Konfiguracja aplikacji
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Konfiguracja CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Konfiguracja WebSocket
WS_HEARTBEAT_INTERVAL=30
WS_CONNECTION_TIMEOUT=60

# Konfiguracja Frontend
REACT_APP_BACKEND_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000/ws

# Åšrodowisko
ENVIRONMENT=development
DEBUG=true

# Limity API
MAX_TOKENS_PER_REQUEST=4000
MAX_CONTEXT_LENGTH=8000
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600
